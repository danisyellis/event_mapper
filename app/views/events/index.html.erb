<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Lat</th>
      <th>Lon</th>
      <th>Radius</th>
      <th>Description</th>
      <th>Event url</th>
      <th>Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.id %></td>
        <td><%= event.lat %></td>
        <td><%= event.lon %></td>
        <td><%= event.radius %></td>
        <td><%= event.description %></td>
        <td><%= event.event_url %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

